{
  "manifest_version": 3,
  "name": "Tab Group Helper",
  "version": "1.0",
  "description": "Helper extension for tab grouping",
  "permissions": [
    "tabs",
    "tabGroups"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Tab Group Helper"
  }
}

